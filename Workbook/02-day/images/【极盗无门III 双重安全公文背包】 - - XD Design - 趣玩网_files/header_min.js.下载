$(document).ready(function(){$("#mypop,#my_pop").hover(function(){$("#my_pop").show()},function(){$("#my_pop").hide()});$("#mypop1").hover(function(){$("#my_pop1").show()},function(){$("#my_pop1").hide()});$(function(){var c=$(".navitem"),f=$(".dropdown"),e=false,d=false,g=false;var b=function(h){if(!g){g=true;setTimeout(function(){g=false;if(!e&&!d){a(h)}},250)}};var a=function(h){$(h).siblings(".dropdown").hide();$(h).removeClass("active")};$(".navitem").live("mouseover mouseleave",function(h){if(h.type=="mouseover"){e=true;var i=$(this).parent().siblings().children(".navitem");$(this).addClass("active");$(this).siblings(".dropdown").slideDown("fast");a(i)}else{e=false;if(e||d){a($(this))}else{b($(this))}}});$(".dropdown").live("mouseover mouseleave",function(h){if(h.type=="mouseover"){d=true}else{d=false;b($(this).siblings(".navitem"))}});if($(".tags dl").length===$(".tags").length){var tagLen=$(".tags").length;for(var i=0;i<tagLen;i++){var oldDom=$($(".tags")[i]).find("dd");var aDom=$($(".tags>a")[i]);var oldDomLen=oldDom.length;if(oldDomLen>5){var lengs=Math.floor(oldDomLen/2);if(oldDomLen/2>lengs){var newDom1=oldDom.slice(0,lengs+1);var newDom2=oldDom.slice(-lengs);var nullDom=$("<dd>",{style:"height: 24px;"});newDom2.push(nullDom[0])}else{var newDom1=oldDom.slice(0,lengs);var newDom2=oldDom.slice(-lengs)};var newHtml1=$("<dl>",{style:"display:none"});var newHtml2=$("<dl>",{style:"display:none;left:164px;"});newHtml1.html(newDom1);newHtml2.html(newDom2);$($(".tags")[i]).html(aDom);$($(".tags")[i]).append(newHtml1);$($(".tags")[i]).append(newHtml2)}}};});setHeadFlowNum();$("body").bind(".modal_box_close","click",function(a){post_guide(6)})});
function soTxtScript(txt){var reg = new RegExp("[^a-zA-Z0-9_\u4e00-\u9fa5]",'gmi');txt = txt.replace(reg,'');return txt;}
function checkSearchFormAction(){var a=$("#so_txt").val();a=soTxtScript(a);$("#so_txt").val(a);if($.trim(a)==""){return false}else{if(typeof($.cookie)=="function"){$.cookie("autocomplete_words",a)}
return true}}
function search_kwords(a){a=soTxtScript(a);$("#so_txt").val(a);$("#sfm").val("hotwords");$("#searchForm").submit()}
function setHeadFlowNum(){changeUserCenterInfo();$.ajax({type:"POST",url:"/flow.php?step=ajaxcartnum",data:"t="+new Date().getTime(),success:function(A){var re=eval("("+A+")");$("#ECS_CARTINFO").html(re.num);$(".cart_detail").html(re.content);if(re.num>0){$(".basket").addClass("full")}else{$(".basket").removeClass("full")}}})}
function dropHeadFlowNum(a){$.ajax({type:"POST",url:"/flow.php?step=delete_goods",data:"rec_key="+a,success:function(b){setHeadFlowNum()}})}
function myAddBookmark(b,a){if((typeof window.sidebar=="object")&&(typeof window.sidebar.addPanel=="function")){window.sidebar.addPanel(b,a,"")}else{window.external.AddFavorite(a,b)}}
function setHeadUserStatus(){var box=$("#login_message");$.ajax({type:"POST",url:"/user.php?act=check_login",data:"t="+new Date().getTime(),success:function(A){var re=eval("("+A+")");if(re.error==1){if(re.is_taobao==1){$(box).html(re.message)}else{if(re.is_qqcb==1){$("#login_head_show").show();$("#login_head_show_title").html(re.content.login_head_show+" <font color='red'>"+re.content.nickname+"</font><a href='http://cb.qq.com/my/my_jifen_source.html' target='_blank'>\u9286\u612d\u579c\u9428\u52eb\u50f5\u7490\u6fc8\u041d\u9352\u55d0\ufffd\ufffd/a>");$(box).html(re.message);$("#user_center").prepend("<span id='nickName'></span>");$("#nickName").html(re.content.nickname.slice(6))}else{$(box).before(re.message);$(box).remove()}}}else{$(box).html(re.message)}}})}
function changeUserCenterInfo(){setHeadUserStatus()}
function changeOrder(d,c){if(c==""){var b=document.location.href}else{var b=document.getElementById(""+c+"").getAttribute("link")}
if(b==""){return false}
if(b.indexOf("?")<1){b+="?r="}
if(b.indexOf("sort")>0){b=(b+"&").replace(/sort=.*?&/g,"sort="+d.id+"&")}else{b+="&sort="+d.id}
if(b.substring(b.length-1,b.length)=="&"){b=b.substring(0,b.length-1)}
if(d.id=="goods_price"){if(b.indexOf("order")<0||b.indexOf("order=asc")>0){var a="desc"}else{if(b.indexOf("order=desc")>0){var a="asc"}}
b=b.replace(/&order=[a-zA-Z]+/g,"");b=b.replace(/order=[a-zA-Z]+/g,"");b+="&order="+a}else{b=b.replace(/&order=[a-zA-Z]+/g,"");b=b.replace(/order=[a-zA-Z]+/g,"")}
window.location.href=b;return false}
function post_guide(p){$.ajax({type:"POST",url:"/router.php?m=user&a=guide",async:(p==1?true:false),data:"step="+p,success:function(e){if(e==""){return false}
var e=eval("("+e+")");if(e.error>0){return false}
var width=624;$("#modal_box_wrapper").remove();$.modal_box("",e.content,true,width)}})};